<!--pages/posts/posts.wxml-->
<view>
<swiper indicator-dots="{{true}}" autoplay>
  <swiper-item>
    <image  src="/images/bestplayers.png"></image>
  </swiper-item>
  <swiper-item>
    <image  src="/images/lpl.png"></image>
  </swiper-item>
  <swiper-item>
    <image  src="/images/jumpfly.png"></image>
  </swiper-item>
</swiper>

<block wx:for="{{postList}}" wx:key="index">
<view class="post-container" data-post-id="{{item.postId}}" bind:tap="onGoToDetail">
  <view class="post-author-date">
    <image catch:tap="onMaxImage" class="post-author" src="{{item.avatar}}"></image>
    <text class="post-date">{{item.date}}</text>
  </view>

  <text class="post-title">{{item.title}}</text>

  <image class="post-image" src="{{item.imgSrc}}"></image>

  <text class="post-content">{{item.content}}</text>

  <view class="post-like">
    <!-- <image class="post-like-image" src="/images/icon/chat.png"></image> -->
    <l-icon class="post-like-image" color="#666" size="32" name="favor"></l-icon>
    <text class="post-like-font">{{item.collection}}</text>
    <!-- <image class="post-like-image" src="/images/icon/view.png"></image> -->
    <l-icon class="post-like-image" color="#666" size="32" name="eye"></l-icon>
    <text class="post-like-font" >{{item.reading}}</text>
  </view>
</view>
</block>

</view>